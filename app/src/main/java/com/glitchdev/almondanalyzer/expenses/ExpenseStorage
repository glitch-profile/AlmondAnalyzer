class ExpenseStorage(private val dao: ExpenseDao) {

    suspend fun load(): List<Expense> = dao.getAll()
    suspend fun loadForField(fieldId: Long): List<Expense> = dao.getByField(fieldId)
    suspend fun add(expense: Expense) = dao.insert(expense)
    suspend fun remove(expense: Expense) = dao.delete(expense)

    suspend fun search(query: String): List<Expense> = dao.search(query)

    suspend fun getSortedByDate(): List<Expense> = dao.getSortedByDate()
    suspend fun getSortedByAmount(): List<Expense> = dao.getSortedByAmount()
}
